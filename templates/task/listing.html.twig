{% extends 'base.html.twig' %}

{% block title %}Listing des tâches{% endblock %}

{% block body %}
<h1>Listing des tâches</h1>
<button type="button" class="btn btn-primary" href="{{ path('app_add_task' )}}">Ajouter</button>
<table class="table table-dark table-hover mr-5">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Délai</th>
            <th scope="col">Priorité</th>
            <th scope="col">Catégorie</th>
        </tr>
    </thead>
    <tbody>
    {% for task in tasks %}
        <tr>
            <th scope="row">{{ task.idTask }}</th>
            <td>{{ task.nameTask }}</td>
            <td>{{ task.dueDateTask|date("d\m\Y H:i:s")}}</td>
            <td>{{ task.priorityTask }}</td>
            <td>{{ task.category.getLibelleCategory()}}</td>
            <td><button type="button" class="btn btn-success" href="{{ path('app_update_task' )}}">Modifier</button></td>
            <td><button type="button" class="btn btn-danger" href="{{ path('app_delete_task' )}}">Supprimer</button></td>
        </tr>
    {% endfor %}
</table>
{% endblock %}
