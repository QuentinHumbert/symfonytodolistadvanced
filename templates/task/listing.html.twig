{% extends 'base.html.twig' %}

{% block title %}Listing des tâches{% endblock %}

{% block body %}

{% for message in app.flashes('notice') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}

<h1>Listing des tâches</h1>
<button type="button" class="btn btn-primary" onclick="window.location.href='{{ path('app_add_task') }}'">Ajouter</button>
<table class="table table-dark table-hover mr-5">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Date d'expiration</th>
            <th scope="col">Priorité</th>
            <th scope="col">Catégorie</th>
        </tr>
    </thead>
    <tbody>
    {% for task in tasks %}
        <tr>
            <th scope="row">{{ task.idTask }}</th>
            <td>{{ task.nameTask }}</td>
            <td>{{ task.dueDateTask|date("d/m/Y H:i:s")}}</td>
            <td>{{ task.priorityTask }}</td>
            <td>{{ task.category.getLibelleCategory()}}</td>
            <td><button type="button" class="btn btn-success" onclick="window.location.href='{{ path('app_update_task', {id:task.idTask}) }}'">Modifier</button></td>
            <td><button type="button" class="btn btn-danger" onclick="window.location.href='{{ path('app_delete_task', {id:task.idTask}) }}'">Supprimer</button></td>
        </tr>
    {% endfor %}
</table>
{% endblock %}
